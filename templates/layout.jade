!!! 5
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/main.css')
      link(rel='stylesheet', href='/css/style.css')
  body(class=bodyclass)
    block header
      header.panel.transparent.nav
        nav.constrain
          a.left(href=locals.url)= locals.name
          a.right(href='/archive.html') Archive
          span.right /
          a.right(href='/') Blog
    block hero
    div.panel.white
      div.constrain
        block content
          h2 Welcome to zombocom!
    footer
      div.content-wrap
        block footer
          section
            !=contents['about.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
    block scripts
      script(src='/js/script.js')
